{
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/invoices",
        "http://localhost:4173/analytics"
      ],
      "numberOfRuns": 3
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.60}],
        "categories:accessibility": ["error", {"minScore": 0.80}],
        "categories:best-practices": ["error", {"minScore": 0.85}],
        "categories:seo": ["error", {"minScore": 0.90}],
        "first-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 6000}],
        "cumulative-layout-shift": ["warn", {"maxNumericValue": 0.3}],
        "total-blocking-time": ["warn", {"maxNumericValue": 1000}],
        "speed-index": ["warn", {"maxNumericValue": 5000}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
